<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login_account_label"
            android:layout_width="wrap_content"
            android:text="@string/ACCOUNT"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_toRightOf="@id/tv_login_account_label"
            android:id="@+id/edt_login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login_pw_label"
            android:layout_width="wrap_content"
            android:text="@string/ACCOUNT"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_toRightOf="@id/tv_login_pw_label"
            android:id="@+id/edt_login_pw"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:lines="1"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:text="@string/LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>